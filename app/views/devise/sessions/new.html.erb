<div class="container">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class = "form-group"><%= f.label :email,:class=>'whitetext' %><br />
  <%= f.email_field :email, :autofocus => true,class:"form-control", style:"width:30%" %></div>

  <div class = "form-group"><%= f.label :password,:class=>'whitetext' %><br />
  <%= f.password_field :password,class:"form-control", style:"width:30%" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class = "form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me,:class=>'whitetext' %></div>
  <% end %>

  <div class = "form-group"><%= f.submit "Sign in",class:"btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>